{
  "main": "electron/main.cjs",
  "name": "smart-stock",
  "private": true,
  "version": "3.7.00",
  "description": "SmartStock - Hệ thống quản lý kho thông minh",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "npm run build && npx electron .",
    "electron:build": "npm run build && electron-builder",
    "postinstall": "electron-rebuild -f -w better-sqlite3"
  },
  "dependencies": {
    "@google/genai": "^1.35.0",
    "@types/lodash": "^4.17.24",
    "better-sqlite3": "^12.6.0",
    "cors": "^2.8.5",
    "exceljs": "^4.4.0",
    "express": "^4.22.1",
    "jsonwebtoken": "^9.0.3",
    "lodash": "^4.17.23",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "recharts": "^3.6.0",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "xlsx": "^0.18.5",
    "xlsx-js-style": "^1.2.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "jwt-decode": "^4.0.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  },
  "build": {
    "appId": "com.smartstock.demo",
    "productName": "SmartStock",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "server.cjs",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "artifactName": "SmartStock-Installer.${ext}"
    },
    "portable": {
      "artifactName": "SmartStock-Portable.${ext}"
    },
    "asar": true
  }
}
